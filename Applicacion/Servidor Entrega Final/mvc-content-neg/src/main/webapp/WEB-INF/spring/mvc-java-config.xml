<?xml version="1.0" encoding="UTF-8"?>
<beans profile="javaconfig"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Use Java configuration. Set "javaconfig" profile in web.xml -->

	<!-- Create this configuration as a bean, it creates everything else. -->
	<bean class="rewardsonline.accounts.MvcConfiguration" />

	<!-- Enable all the annotations - normally enabled by component-scanner. -->
	<context:annotation-config />

</beans>
